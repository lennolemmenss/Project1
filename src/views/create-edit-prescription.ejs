<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= prescription ? 'Edit Prescription' : 'Add Prescription' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">

  <!-- Include Navbar -->
  <%- include("./partials/navbar") %>

  <!-- Page Content -->
  <div class="container mx-auto mt-10 px-6">
    <div class="bg-white shadow-lg rounded-lg p-8">
      <h1 class="text-2xl font-semibold text-gray-800 mb-6">
        <%= prescription ? 'Edit Prescription' : 'Add Prescription' %>
      </h1>

      <form 
        action="<%= prescription ? `/prescriptions/${prescription.prescription_id}?_method=PUT` : `/patients/${patient.patient_id}/prescriptions` %>" 
        method="POST">
        
        <div class="grid grid-cols-1 gap-6 mb-6">
          <div>
            <label for="doctor_id" class="block text-gray-700">Doctor ID</label>
            <input type="number" id="doctor_id" name="doctor_id" 
                   value="<%= prescription ? prescription.doctor_id : '' %>" 
                   class="w-full px-4 py-2 border rounded-md" required>
          </div>
          <div>
            <label for="prescribed_date" class="block text-gray-700">Prescribed Date</label>
            <input type="date" id="prescribed_date" name="prescribed_date" 
                   value="<%= prescription ? prescription.prescribed_date.toISOString().split('T')[0] : '' %>" 
                   class="w-full px-4 py-2 border rounded-md" required>
          </div>
          <div>
            <label for="valid_until" class="block text-gray-700">Valid Until</label>
            <input type="date" id="valid_until" name="valid_until" 
                   value="<%= prescription ? prescription.valid_until.toISOString().split('T')[0] : '' %>" 
                   class="w-full px-4 py-2 border rounded-md" required>
          </div>
          <div>
            <label for="notes" class="block text-gray-700">Notes</label>
            <textarea id="notes" name="notes" rows="4" 
                      class="w-full px-4 py-2 border rounded-md"><%= prescription ? prescription.notes : '' %></textarea>
          </div>
        </div>

        <div class="flex justify-end">
          <button type="submit" 
                  class="bg-blue-600 text-white px-6 py-2 rounded-md shadow-lg hover:bg-blue-500 transition">
            <%= prescription ? 'Update Prescription' : 'Add Prescription' %>
          </button>
        </div>
      </form>
    </div>
  </div>

</body>

</html>
