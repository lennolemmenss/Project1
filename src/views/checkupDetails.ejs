<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkup Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
  <%- include("./partials/navbar") %>

  <div class="container mx-auto mt-10 px-4 sm:px-6 lg:px-8">
    <!-- Basic info section remains the same -->

    <div class="bg-white shadow-lg rounded-lg p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-medium text-gray-800">Documents</h2>
        <div class="space-x-4">
          <a href="/checkups/<%= checkup.checkup_id %>/edit" 
             class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-500 transition">
            Edit Checkup
          </a>
        </div>
      </div>

      <% if (checkupDocuments && checkupDocuments.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% checkupDocuments.forEach(doc => { %>
            <div class="border rounded-lg p-4 bg-gray-50">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-medium text-gray-900"><%= doc.file_name %></h3>
                  <p class="text-sm text-gray-500">Type: <%= doc.file_type %></p>
                  <p class="text-sm text-gray-500">
                    Uploaded: <%= new Date(doc.upload_date).toLocaleDateString() %>
                  </p>
                </div>
                <a href="<%= doc.file_path %>" 
                   target="_blank"
                   class="bg-blue-100 text-blue-700 px-3 py-1 rounded-md hover:bg-blue-200 transition">
                  View
                </a>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <p class="text-gray-500">No documents uploaded yet.</p>
      <% } %>
    </div>

    <div class="mt-6 text-center">
      <a href="/checkups" class="bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-500 transition">
        Back to Checkups
      </a>
    </div>
  </div>
</body>
</html>