<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkup Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">

  <!-- Include Navbar -->
  <%- include("./partials/navbar") %>

  <!-- Page Content -->
  <div class="container mx-auto mt-10 px-4 sm:px-6 lg:px-8">

    <!-- Title Section -->
    <div class="text-center">
      <h1 class="text-4xl font-semibold text-blue-600">Checkup Details</h1>
      <p class="text-gray-600 mt-2">Detailed overview of the checkup</p>
    </div>

    <!-- Checkup Details Section -->
    <div class="bg-white shadow-md rounded-lg p-6 mt-8">

      <!-- Checkup Basic Info -->
      <h2 class="text-xl font-medium text-gray-800 mb-4">Basic Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <p><span class="font-semibold">Patient:</span> <%= checkup.patient.first_name %> <%= checkup.patient.last_name %></p>
          <p><span class="font-semibold">Doctor:</span> <%= checkup.doctor.first_name %> <%= checkup.doctor.last_name %></p>
        </div>
        <div>
          <p><span class="font-semibold">Checkup Type:</span> <%= checkup.checkupType.type_name %></p>
          <p><span class="font-semibold">Date:</span> <%= new Date(checkup.checkup_date).toLocaleDateString() %></p>
          <p><span class="font-semibold">Status:</span> <%= checkup.status %></p>
        </div>
      </div>

      <!-- Notes -->
      <div class="mt-6">
        <h3 class="text-lg font-medium text-gray-800">Notes</h3>
        <p class="mt-2 text-gray-700"><%= checkup.notes || 'No notes available.' %></p>
      </div>
    </div>

    <!-- Checkup Documents Section -->
    <div class="bg-white shadow-md rounded-lg p-6 mt-8">

      <h2 class="text-xl font-medium text-gray-800 mb-4">Checkup Documents</h2>

      <% if (checkupDocuments.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full border-collapse border border-gray-300">
            <thead class="bg-blue-600 text-white">
              <tr>
                <th class="px-4 py-2 text-left border-b border-gray-300">Document ID</th>
                <th class="px-4 py-2 text-left border-b border-gray-300">File Name</th>
                <th class="px-4 py-2 text-left border-b border-gray-300">File Type</th>
                <th class="px-4 py-2 text-left border-b border-gray-300">Upload Date</th>
                <th class="px-4 py-2 text-left border-b border-gray-300">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% checkupDocuments.forEach(document => { %>
                <tr class="hover:bg-gray-100">
                  <td class="px-4 py-2 border-t border-gray-300"><%= document.document_id %></td>
                  <td class="px-4 py-2 border-t border-gray-300"><%= document.file_name %></td>
                  <td class="px-4 py-2 border-t border-gray-300"><%= document.file_type %></td>
                  <td class="px-4 py-2 border-t border-gray-300"><%= new Date(document.upload_date).toLocaleDateString() %></td>
                  <td class="px-4 py-2 border-t border-gray-300">
                    <a href="<%= document.file_path %>" target="_blank" class="text-blue-600 hover:underline">View</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-gray-700">No documents available for this checkup.</p>
      <% } %>
    </div>

    <!-- Back Button -->
    <div class="text-center mt-6">
      <a href="/checkups" class="bg-blue-600 text-white px-4 py-2 rounded shadow-md hover:bg-blue-500 transition">Back to Checkups</a>
    </div>

  </div>

</body>

</html>
