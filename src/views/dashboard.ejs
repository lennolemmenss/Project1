<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <%- include("./partials/navbar") %>

  <!-- Page Content -->
  <div class="container mx-auto mt-10">
    <!-- Welcome Section -->
    <div class="text-center">
      <h1 class="text-4xl font-semibold text-blue-600">Welcome to the Dashboard</h1>
      <p class="text-gray-600 mt-4">Quick stats and actions go here!</p>
    </div>

    <!-- Dashboard Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-10">
      <!-- Patients Card -->
      <div class="bg-white shadow-md rounded p-6 text-center">
        <h2 class="text-2xl font-semibold text-blue-600">50</h2>
        <p class="text-gray-600 mt-2">Total Patients</p>
        <a href="/patients" class="text-blue-500 hover:underline mt-4 block">View Patients</a>
      </div>

      <!-- Checkups Card -->
      <div class="bg-white shadow-md rounded p-6 text-center">
        <h2 class="text-2xl font-semibold text-green-600">20</h2>
        <p class="text-gray-600 mt-2">Scheduled Checkups</p>
        <a href="/checkups" class="text-green-500 hover:underline mt-4 block">View Checkups</a>
      </div>

      <!-- Prescriptions Card -->
      <div class="bg-white shadow-md rounded p-6 text-center">
        <h2 class="text-2xl font-semibold text-yellow-600">15</h2>
        <p class="text-gray-600 mt-2">Pending Prescriptions</p>
        <a href="/prescriptions" class="text-yellow-500 hover:underline mt-4 block">View Prescriptions</a>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-12">
      <h2 class="text-2xl font-semibold text-gray-700 text-center">Quick Actions</h2>
      <div class="flex justify-center mt-6 space-x-6">
        <a href="/patients" class="bg-blue-600 text-white px-6 py-3 rounded shadow hover:bg-blue-500">Manage Patients</a>
        <a href="/checkups" class="bg-green-600 text-white px-6 py-3 rounded shadow hover:bg-green-500">Schedule Checkups</a>
        <a href="/export" class="bg-yellow-600 text-white px-6 py-3 rounded shadow hover:bg-yellow-500">Export Data</a>
      </div>
    </div>
  </div>

</body>
</html>
