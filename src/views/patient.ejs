<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Patients</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <%- include("./partials/navbar") %>

  <!-- Page Content -->
  <div class="container mx-auto mt-10">
    <!-- Title Section -->
    <div class="text-center">
      <h1 class="text-4xl font-semibold text-blue-600">Patient Management</h1>
      <p class="text-gray-600 mt-4">Manage all patient details here.</p>
    </div>

    <!-- Patient Management Section -->
    <div class="mt-8">
      <!-- Add Patient Button -->
      <div class="flex justify-end mb-4">
        <button class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-500">
          + Add New Patient
        </button>
      </div>

      <!-- Patient List -->
      <div class="bg-white shadow-md rounded">
        <table class="min-w-full table-auto border-collapse border border-gray-300">
          <thead>
            <tr class="bg-blue-600 text-white">
              <th class="px-4 py-2 text-left border border-gray-300">Patient ID</th>
              <th class="px-4 py-2 text-left border border-gray-300">Name</th>
              <th class="px-4 py-2 text-left border border-gray-300">Email</th>
              <th class="px-4 py-2 text-left border border-gray-300">Phone</th>
              <th class="px-4 py-2 text-left border border-gray-300">Actions</th>
            </tr>
          </thead>
          <tbody>
            <!-- Example Patient Data -->
            <tr class="border border-gray-300 hover:bg-gray-100">
              <td class="px-4 py-2">1</td>
              <td class="px-4 py-2">John Doe</td>
              <td class="px-4 py-2">johndoe@example.com</td>
              <td class="px-4 py-2">+123 456 789</td>
              <td class="px-4 py-2">
                <button class="text-blue-600 hover:underline">Edit</button> | 
                <button class="text-red-600 hover:underline">Delete</button>
              </td>
            </tr>
            <tr class="border border-gray-300 hover:bg-gray-100">
              <td class="px-4 py-2">2</td>
              <td class="px-4 py-2">Jane Smith</td>
              <td class="px-4 py-2">janesmith@example.com</td>
              <td class="px-4 py-2">+987 654 321</td>
              <td class="px-4 py-2">
                <button class="text-blue-600 hover:underline">Edit</button> | 
                <button class="text-red-600 hover:underline">Delete</button>
              </td>
            </tr>
            <!-- End Example Patient Data -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
