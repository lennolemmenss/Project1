<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Patients</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">

  <!-- Include Navbar -->
  <%- include("./partials/navbar") %>

  <!-- Page Content -->
  <div class="container mx-auto mt-10">
    <!-- Title Section -->
    <div class="text-center">
      <h1 class="text-4xl font-semibold text-blue-600">Patient Management</h1>
      <p class="text-gray-600 mt-4">Manage all patient details here.</p>
    </div>

    <!-- Patient Management Section -->
    <div class="mt-8">
      <!-- Add Patient Button -->
      <div class="flex justify-end mb-4">
        <a href="/patients/new" class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-500">
          + Add New Patient
        </a>
      </div>

      <!-- Patient List -->
      <div class="bg-white shadow-md rounded mt-8">
        <table class="min-w-full table-auto border-collapse border border-gray-300">
          <thead>
            <tr class="bg-blue-600 text-white">
              <th class="px-4 py-2 text-left border border-gray-300">Patient ID</th>
              <th class="px-4 py-2 text-left border border-gray-300">Name</th>
              <th class="px-4 py-2 text-left border border-gray-300">Email</th>
              <th class="px-4 py-2 text-left border border-gray-300">Phone</th>
              <th class="px-4 py-2 text-left border border-gray-300">Actions</th>
            </tr>
          </thead>
          <tbody>
            <!-- Loop through patients here -->
            <% if (patients && patients.length > 0) { %>
              <% patients.forEach(function(patient) { %>
                <tr class="border border-gray-300 hover:bg-gray-100">
                  <td class="px-4 py-2"><%= patient.patient_id %></td>
                  <td class="px-4 py-2"><%= patient.first_name %> <%= patient.last_name %></td>
                  <td class="px-4 py-2"><%= patient.email %></td>
                  <td class="px-4 py-2"><%= patient.contact_number %></td>
                  <td class="px-4 py-2">
                    <!-- Edit Link -->
                    <a href="/patients/<%= patient.patient_id %>/edit" class="text-blue-600 hover:underline">Edit</a>
                    <!-- Delete Form -->
                    <form action="/patients/<%= patient.patient_id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this patient?');">
                      <button type="submit" class="text-red-600 hover:underline">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <!-- No patients available -->
              <tr>
                <td colspan="5" class="text-center py-4">No patients available.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</body>

</html>
