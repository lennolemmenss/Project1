<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Patients</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">

  <!-- Include Navbar -->
  <%- include("./partials/navbar") %>

  <!-- Page Content -->
  <div class="container mx-auto mt-10 px-6">

    <!-- Title Section -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-semibold text-blue-600">Patient Management</h1>
      <p class="text-gray-600 mt-4">Manage all patient details here.</p>
    </div>

    <!-- Search/Filter Bar -->
    <div class="flex justify-between items-center mb-6">
      <!-- Search Input -->
      <input
        type="text"
        id="search"
        name="search"
        placeholder="Search by name"
        class="w-full md:w-1/2 px-4 py-2 border rounded focus:outline-none focus:ring focus:ring-blue-300"
        oninput="filterPatients()"
      />

      <!-- Filter Dropdown -->
      <select
        id="filter"
        name="filter"
        class="ml-4 px-4 py-2 border rounded focus:outline-none focus:ring focus:ring-blue-300"
        onchange="filterPatients()"
      >
        <option value="all">All Patients</option>
        <option value="active">Active Conditions</option>
        <option value="resolved">Resolved Conditions</option>
      </select>
    </div>

    <!-- Patient Management Section -->
    <div class="mt-8">
      <!-- Add Patient Button -->
      <div class="flex justify-end mb-6">
        <a href="/patients/new" class="bg-blue-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-blue-500 transition">
          + Add New Patient
        </a>
      </div>

      <!-- Patient List -->
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <table id="patientTable" class="min-w-full table-auto border-collapse border border-gray-300">
          <thead>
            <tr class="bg-blue-600 text-white">
              <th class="px-6 py-3 text-left border-b border-gray-300">Patient ID</th>
              <th class="px-6 py-3 text-left border-b border-gray-300">Name</th>
              <th class="px-6 py-3 text-left border-b border-gray-300">Email</th>
              <th class="px-6 py-3 text-left border-b border-gray-300">Phone</th>
              <th class="px-6 py-3 text-left border-b border-gray-300">Status</th>
              <th class="px-6 py-3 text-left border-b border-gray-300">Actions</th>
            </tr>
          </thead>
          <tbody id="patientTableBody">
            <% if (patients && patients.length > 0) { %>
              <% patients.forEach(function(patient) { %>
                <tr
                  class="border-t border-gray-300 hover:bg-gray-100"
                  data-status="<%= patient.condition_status %>"
                  data-name="<%= patient.first_name.toLowerCase() %> <%= patient.last_name.toLowerCase() %>"
                >
                  <td class="px-6 py-3 text-gray-700"><%= patient.patient_id %></td>
                  <td class="px-6 py-3 text-gray-700">
                    <a href="/patients/<%= patient.patient_id %>" class="text-blue-600 hover:underline">
                      <%= patient.first_name %> <%= patient.last_name %>
                    </a>
                  </td>
                  <td class="px-6 py-3 text-gray-700"><%= patient.email %></td>
                  <td class="px-6 py-3 text-gray-700"><%= patient.contact_number %></td>
                  <td class="px-6 py-3 capitalize text-gray-700"><%= patient.condition_status %></td>
                  <td class="px-6 py-3">
                    <a href="/patients/<%= patient.patient_id %>/edit" class="text-blue-600 hover:underline">Edit</a> |
                    <form action="/patients/<%= patient.patient_id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this patient?');">
                      <button type="submit" class="text-red-600 hover:underline">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center py-4 text-gray-500">No patients available.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    function filterPatients() {
      const searchValue = document.getElementById("search").value.toLowerCase();
      const filterValue = document.getElementById("filter").value;
      const tableBody = document.getElementById("patientTableBody");
      const rows = tableBody.querySelectorAll("tr");

      rows.forEach(row => {
        const name = row.getAttribute("data-name");
        const status = row.getAttribute("data-status");

        // Apply search and filter logic
        const matchesSearch = !searchValue || name.includes(searchValue);
        const matchesFilter = filterValue === "all" || filterValue === status;

        if (matchesSearch && matchesFilter) {
          row.style.display = ""; // Show row
        } else {
          row.style.display = "none"; // Hide row
        }
      });
    }
  </script>

</body>

</html>
